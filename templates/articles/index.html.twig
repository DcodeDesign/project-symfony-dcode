                            <h5 class="card-title">
                                {#<a href="{{ path('property.show', {id: property.id, slug: property.slug })}}">{{ property.title }}</a>#}
                                {{ article.title }}
                            </h5>
                            <p class="card-text">
                                {{ article.contentArticle | striptags | slice(0, 50)}} ...</p>
                            {#<p class="text-primary">{{ property.price | number_format(0, '', ' ') }} euros</p>#}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
